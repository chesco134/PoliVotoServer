<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/set_title_option_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="20sp"
        android:fontFamily="sans-serif-thin-bold"
        android:text="@string/ingrese_titulo_opcion"
        android:textColor="#904444"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/set_title_option"
        android:layout_width="match_parent"
        android:layout_height="36sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/set_title_option_label"
        android:layout_marginEnd="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginStart="20sp"
        android:background="@drawable/input_box_1"
        android:fontFamily="sans-serif-normal"
        android:inputType="text"
        android:textColor="#333333"
        android:textSize="20sp" />

