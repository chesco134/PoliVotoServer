<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/greeting_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="12sp"
        android:layout_marginLeft="12sp"
        android:layout_marginRight="12sp"
        android:layout_marginStart="12sp"
        android:layout_marginTop="20sp"
        android:text="@string/define_zona_votacion"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/first_time_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/greeting_tag"
        android:layout_marginEnd="12sp"
        android:layout_marginLeft="12sp"
        android:layout_marginRight="12sp"
        android:layout_marginStart="12sp"
        android:layout_marginTop="12sp"
        android:text="@string/especifique_zona" />

    <EditText
        android:id="@+id/location_text"
        android:layout_width="match_parent"
        android:layout_height="32sp"
        android:layout_below="@+id/first_time_tag"
        android:layout_marginEnd="12sp"
        android:layout_marginLeft="12sp"
        android:layout_marginRight="12sp"
        android:layout_marginStart="12sp"
        android:layout_marginTop="12sp"
        android:background="@drawable/input_box_1"
        android:inputType="text" />

    <Button
        android:id="@+id/confirmar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12sp"
        android:layout_marginRight="12sp"
        android:layout_marginStart="12sp"
        android:layout_marginLeft="12sp"
        android:layout_marginTop="20sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/location_text"
        android:onClick="aceptar"
        android:text="@string/aceptar"/>
</RelativeLayout><!-- From: file:/home/jcapiz/AndroidStudioProjects/PoliVotoServer/app/src/main/res/layout/especificar_zona_votacion.xml -->